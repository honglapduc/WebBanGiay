@using webBanGiay.Models
@model List<GioHang>
@{
    ViewBag.Title = "Sữa giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GioHang</h2>
<table id="divGioHang">
    <tr>
        <td>Mã Giày</td>

        <td>Tên Giày</td>

        <td>Hình ảnh</td>

        <td>Đơn giá</td>

        <td>Số lượng</td>

        <td>Thành tiền</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.iMaGiay</td>

            <td>@item.sTenGiay</td>

            <td>
                <img src="@Url.Content("~/AnhGiay/"+item.sHinhAnh)" width="50px" height="50px" alt="">
            </td>

            <td>
                @String.Format("{0:0,0}", item.dDonGia) VNĐ
            </td>
            @*sua gio hang gọi về action capnhatgiohang*@
            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.iMaGiay }))
            {
                <td>@Html.TextBox("txtSoLuong", item.iSoLuong) </td>




            <td>@String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>
            <td>
                <input type="submit" value="Cập nhật" />
                <br />
                @*xoa gio hang gọi về action xoagiohang*@
                @Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSP=item.iMaGiay })
            </td>
            }
            <td>

            </td>
        </tr>
            

    }
</table>

<style>
    #divGioHang{
        border: 1px solid #000000;
    }
</style>